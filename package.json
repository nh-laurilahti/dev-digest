{
  "name": "daily-dev-digest",
  "version": "1.0.0",
  "description": "A comprehensive platform for generating daily development digests from GitHub repositories",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "bun --hot src/index.ts",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run --config vitest.config.unit.ts",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:performance": "vitest run --config vitest.config.performance.ts",
    "test:security": "vitest run tests/security",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist coverage test-results playwright-report",
    "test:setup": "npm run db:test:setup",
    "db:test:setup": "DATABASE_URL=postgresql://test:test@localhost:5432/digest_test npx prisma migrate deploy && npx prisma generate"
  },
  "dependencies": {
    "@octokit/auth-app": "^8.1.0",
    "@octokit/rest": "^22.0.0",
    "@octokit/webhooks": "^14.1.3",
    "@prisma/client": "^5.0.0",
    "@slack/events-api": "^3.0.1",
    "@slack/web-api": "^7.10.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/crypto-js": "^4.2.2",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/morgan": "^1.9.4",
    "@types/uuid": "^9.0.2",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.5",
    "pino": "^8.14.1",
    "pino-pretty": "^10.0.1",
    "prisma": "^5.0.0",
    "rate-limiter-flexible": "^2.4.2",
    "uuid": "^9.0.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.4.2",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "handlebars": "^4.7.8",
    "msw": "^2.0.0",
    "nock": "^13.4.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vitest": "^1.0.0",
    "vitest-mock-extended": "^1.3.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "github",
    "digest",
    "development",
    "typescript",
    "nodejs",
    "express"
  ],
  "author": "Daily Dev Digest",
  "license": "MIT"
}
